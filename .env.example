# Application Configuration
APP_NAME=PaddleOCR FastAPI Service
DEBUG=false
VERSION=1.0.0

# OCR Configuration
# Note: PP-OCRv5 uses lang='ch' which automatically handles multilingual text
# (Simplified Chinese, Traditional Chinese, English, Japanese, Pinyin)
OCR_LANG=ch
USE_GPU=false
OCR_DETECTION_THRESHOLD=0.3
OCR_RECOGNITION_THRESHOLD=0.7
ENABLE_DOC_ORIENTATION=false
ENABLE_TEXT_ORIENTATION=true

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/bmp,image/webp

# Network Configuration
IMAGE_DOWNLOAD_TIMEOUT=30

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Logging
LOG_LEVEL=INFO
